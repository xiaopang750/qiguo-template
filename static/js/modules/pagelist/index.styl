.page-list
	margin-top 40px
	& ul
		width 96%
		margin 0 auto
	& .item-list
		width 47%
		height 300px
		border 1px solid #ccc
		float left
		box-sizing border-box
		text-align center
		line-height 300px
		&:hover 
			border 1px solid #f00
		&:nth-child(even)
			float right
		&
			a
				display block
				width 100%
				height 100%	